{
  "rules": {
    "usuario":	{    
      "$uid":{        
              ".read":"$uid == auth.uid",
              ".write":"$uid == auth.uid"
          		}                   
      },     
      "guitarras":{
        ".write": "root.child('admin').hasChild(auth.uid)",
        ".read": "root.child('admin').hasChild(auth.uid)",
          "normal": {
            ".read":true,
          },
            "vip": {
          ".read":"root.child('vip').hasChild(auth.uid)",
            }
            
      },
      
    "admin":{
      ".write": "root.child('admin').hasChild(auth.uid)",
      ".read": "root.child('admin').hasChild(auth.uid)"
    }       
  }
}